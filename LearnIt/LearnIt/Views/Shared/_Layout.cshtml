<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Learn It!", "About", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, null)</li>
                    @if (this.User.Identity.IsAuthenticated)
                    {
                        <li class="dropdown">
                            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                                <b>Projects</b> <div class="caret"></div>
                            </button>
                            <ul class="dropdown-menu">
                                <li>
                                    @Html.ActionLink("My Courses", "MyCourses", "Courses", new { area = "Courses" }, null)
                                </li>
                                <li>
                                    @Html.ActionLink("All Courses", "AllCourses", "Courses", new { area = "Courses" }, null)
                                </li>
                            </ul>
                        </li>
                    }
                    @if (this.User.IsInRole("Admin"))
                    {
                        <li class="dropdown">
                            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                                <b>Admin</b> <div class="caret"></div>
                            </button>
                            <ul class="dropdown-menu">
                                <li>
                                    @Html.ActionLink("View Users", "ViewUsers", "Admin", new { area = "Admin" }, null)
                                </li>
                                <li>
                                    @Html.ActionLink("Upload Course", "UploadCourse", "Admin", new { area = "Admin" }, null)
                                </li>
                                <li>
                                    @Html.ActionLink("Assign Course", "AssignCourse", "Admin", new { area = "Admin" }, null)
                                </li>
                                <li>
                                    @Html.ActionLink("Deassign Course", "DeassignCourse", "Admin", new { area = "Admin" }, null)
                                </li>
                            </ul>
                        </li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer></footer>
    </div>

    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
